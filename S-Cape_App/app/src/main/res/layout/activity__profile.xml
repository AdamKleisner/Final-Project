<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/activity__profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S-capes"
            android:textSize="48sp"
            android:textAlignment="center"
            android:textColor="@color/SCape_Blue"
            android:layout_gravity="center"
            android:id="@+id/textView_profile_Title"
            android:layout_weight="1" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Planned Trips"
            android:textStyle="bold"
            android:textColor="@color/SCape_Blue"
            android:layout_gravity="center"
            android:id="@+id/textView_PlannedTrips"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textAlignment="center"
            android:text="Past Trips"
            android:gravity="center"
            android:textStyle=""
            android:textColor="@color/SCape_Blue"
            android:layout_gravity="center"
            android:id="@+id/textView_PastTrips"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/SCape_Grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp">

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/upcomingTrips"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_ProfileToMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:fab_colorNormal="@color/SCape_Green"
            app:fab_colorPressed="#20a900"
            app:fab_colorRipple="@color/SCape_Blue"
            fab:fab_label="Trending"
            fab:fab_size="mini"
            android:src="@drawable/fab_add"
            />

    </FrameLayout>

    <Button
        android:text="To Map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonToMap" />
</LinearLayout>