<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__car__planner"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ajp.s_cape_app.Activities.Activity_Car_Planner">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">

        <TextView
            android:textSize="48dp"
            android:layout_gravity="center"
            android:textColor="@color/SCape_White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_carTrip_banner" />


    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="City: Atlanta"
            android:ems="10"
            android:id="@+id/editText_State" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="State: GA"
            android:ems="10"
            android:id="@+id/editText_City"
            android:maxLength="2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/SCape_White"
            android:background="@color/SCape_Light_Blue"
            android:id="@+id/buttonCarTrip"
            android:layout_gravity="center"
            android:text="Set destination"/>

    </LinearLayout>
</LinearLayout>
