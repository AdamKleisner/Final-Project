<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__custom_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.ajp.s_cape_app.Activities.Activity_CustomEvent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="@color/SCape_White"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/textView_CustomEvent_Banner" />
    </FrameLayout>

    <EditText
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:hint="Title"
        android:textColorHint="@color/SCape_Green"
        android:ems="10"
        android:id="@+id/editText_CustomEvent_Title" />

    <TextView
        android:layout_marginTop="12dp"
        android:text="Address(Optional)"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/SCape_Light_Blue"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_CustomEvent_Address" />

    <EditText
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:maxLines="3"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:hint="Address"
        android:textColorHint="@color/SCape_Green"
        android:ems="10"
        android:id="@+id/editText_CustomEvent_Address" />

    <Button
        android:layout_marginTop="40dp"
        android:text="Finish"
        android:layout_width="match_parent"
        android:textColor="@color/SCape_White"
        android:textSize="18sp"
        android:background="@color/SCape_Light_Blue"
        android:layout_height="wrap_content"
        android:id="@+id/button_CustomEvent_Finish" />


</LinearLayout>
